@using Prescolaire.ViewModel
@model MarkFilterViewModel

<table class="table table-bordered px-5 border-2 mt-4">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Marks.First().Student.StudentId)</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>@Html.DisplayNameFor(model => model.Marks.First().Subject.SubjectName)</th>
            <th>@Html.DisplayNameFor(model => model.Marks.First().SchoolYear.Year)</th>
            <th>@Html.DisplayNameFor(model => model.Marks.First().Mark1)</th>
            <th>@Html.DisplayNameFor(model => model.Marks.First().Mark2)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Marks)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Student.StudentId)</td>
                <td>@Html.DisplayFor(modelItem => item.Student.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.Student.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Subject.SubjectName)</td>
                <td>@Html.DisplayFor(modelItem => item.SchoolYear.Year)</td>
                <td>@Html.DisplayFor(modelItem => item.Mark1)</td>
                <td>@Html.DisplayFor(modelItem => item.Mark2)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MarkId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.MarkId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.MarkId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
