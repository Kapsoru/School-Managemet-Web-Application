@model Prescolaire.Models.Mark

@{
    ViewData["Title"] = "Edit Mark";
    Layout = "_LayoutTeacher";
}

<h2>Edit Mark</h2>

<form asp-action="EditMark">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="MarkId" />

    <div class="form-group">
        <label asp-for="StudentId" class="control-label">Student</label>
        <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId" readonly></select>
        <span asp-validation-for="StudentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SubjectId" class="control-label">Subject</label>
        <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId" readonly></select>
        <span asp-validation-for="SubjectId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SchoolYearId" class="control-label">School Year</label>
        <select asp-for="SchoolYearId" class="form-control" asp-items="ViewBag.SchoolYearId" readonly></select>
        <span asp-validation-for="SchoolYearId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Mark1" class="control-label">Mark 1</label>
        <input asp-for="Mark1" class="form-control" />
        <span asp-validation-for="Mark1" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Mark2" class="control-label">Mark 2</label>
        <input asp-for="Mark2" class="form-control" />
        <span asp-validation-for="Mark2" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Marks" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
