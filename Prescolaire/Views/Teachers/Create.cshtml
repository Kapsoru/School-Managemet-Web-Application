@model Prescolaire.Models.Teacher

@{
    ViewData["Title"] = "Adding New Teacher";
}


<hr />
<div class="row">
    <div class="col-md-10 px-5">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                
                <div class="form-group  col-6">
                    <label asp-for="SubjectId" class="control-label"></label>
                    <select asp-for="SubjectId" class="form-control form-control-border" asp-items="ViewBag.SubjectId"></select>
                </div>
            </div>
            <div class="row">
                <div class="form-group  col-6">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control form-control-border" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group  col-6">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control form-control-border" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group  col-6">
                    <label asp-for="Gender" class="control-label"></label>
                    <select asp-for="Gender" class="form-control form-control-border">
                        <option value="M">Male</option>
                        <option value="F">Female</option>
                    </select>
                </div>
                <div class="form-group  col-6">
                    <label asp-for="DateOfBirth" class="control-label"></label>
                    <input asp-for="DateOfBirth" class="form-control form-control-border" type="date"/>
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group  col-6">
                    <label asp-for="Street" class="control-label"></label>
                    <input asp-for="Street" class="form-control form-control-border" />
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>
                <div class="form-group  col-6">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control form-control-border" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group  col-6">
                    <label asp-for="Region" class="control-label"></label>
                    <input asp-for="Region" class="form-control form-control-border" />
                    <span asp-validation-for="Region" class="text-danger"></span>
                </div>
                <div class="form-group  col-6">
                    <label asp-for="Country" class="control-label"></label>
                    <input asp-for="Country" class="form-control form-control-border" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group  col-6">
                    <label asp-for="PostalCode" class="control-label"></label>
                    <input asp-for="PostalCode" class="form-control form-control-border" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <div class="form-group  col-6">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control form-control-border" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group  col-6">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control form-control-border" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group  col-6">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control form-control-border" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group  col-6">
                    <label asp-for="IsActive" class="control-label"></label>
                    <select asp-for="IsActive" class="form-control">
                        <option>True</option>
                        <option>False</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}