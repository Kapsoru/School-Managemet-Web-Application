        });
        $(function () {
            $("#example7").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example7_wrapper .col-md-6:eq(0)');
            $('#example8').DataTable({
