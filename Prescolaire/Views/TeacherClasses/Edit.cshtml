@model Prescolaire.Models.TeacherClass

@{
    ViewData["Title"] = "Editting Teacher Class";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TeacherClass1" />
            <div class="form-group">
                <label asp-for="TeacherId" class="control-label"></label>
                <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.TeacherId">
                </select>
                <span asp-validation-for="TeacherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SchoolYearId" class="control-label"></label>
                <select asp-for="SchoolYearId" class="form-control" asp-items="ViewBag.SchoolYearId"></select>
                <span asp-validation-for="SchoolYearId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassId" class="control-label"></label>
                <select asp-for="ClassId" class="form-control" asp-items="ViewBag.ClassId"></select>
                <span asp-validation-for="ClassId" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(document).ready(function () {
            $('#TeacherId').change(function () {
                var teacherId = $(this).val();
                var schoolYearId = $('#SchoolYearId').val();
                if (teacherId !== "" && schoolYearId !== "") {
                    $.ajax({
                        url: '@Url.Action("GetAvailableClasses", "TeacherClasses")',
                        type: 'GET',
                        data: {
                            teacherId: teacherId,
                            schoolYearId: schoolYearId
                        },
                        success: function (data) {
                            var classesSelect = $('#ClassId');
                            classesSelect.empty();
                            $.each(data, function (index, item) {
                                console.log(data);
                                classesSelect.append($('<option/>', {
                                    value: item.classId,
                                    text: item.className
                                }));
                            });
                        },
                        error: function () {
                            alert('Error loading Classes');
                        }
                    });
                }
            });

            $('#SchoolYearId').change(function () {
                var teacherId = $('#TeacherId').val();
                var schoolYearId = $(this).val();
                if (teacherId !== "" && schoolYearId !== "") {
                    $.ajax({
                        url: '@Url.Action("GetAvailableClasses", "TeacherClasses")',
                        type: 'GET',
                        data: {
                            teacherId: teacherId,
                            schoolYearId: schoolYearId
                        },
                        success: function (data) {
                            var classesSelect = $('#ClassId');
                            classesSelect.empty();
                            $.each(data, function (index, item) {
                                console.log(data);
                                classesSelect.append($('<option/>', {
                                    value: item.classId,
                                    text: item.className
                                }));
                            });
                        },
                        error: function () {
                            alert('Error loading Classes');
                        }
                    });
                }
            });
        });
    </script>
}
